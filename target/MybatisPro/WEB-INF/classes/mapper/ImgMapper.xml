<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.ImgDao">
    <select id="getImgByImgId" resultType="java.lang.String">
        select location from image where id=#{imgid};
    </select>
    <insert id="addImg"  useGeneratedKeys="true" keyProperty="id" parameterType="domain.Img">
        insert into image location values #{filename}
    </insert>
</mapper>